<?xml version="1.0"?>
<!-- Configuration ClickHouse pour RAG Ultra Performant Multimodal API -->
<clickhouse>
    <!-- Configuration réseau -->
    <listen_host>0.0.0.0</listen_host>
    <http_port>8123</http_port>
    <tcp_port>9000</tcp_port>
    <interserver_http_port>9009</interserver_http_port>
    
    <!-- Configuration des logs -->
    <logger>
        <level>information</level>
        <log>/var/log/clickhouse-server/clickhouse-server.log</log>
        <errorlog>/var/log/clickhouse-server/clickhouse-server.err.log</errorlog>
        <size>1000M</size>
        <count>10</count>
    </logger>
    
    <!-- Configuration des chemins -->
    <path>/var/lib/clickhouse/</path>
    <tmp_path>/var/lib/clickhouse/tmp/</tmp_path>
    <user_files_path>/var/lib/clickhouse/user_files/</user_files_path>
    <access_control_path>/var/lib/clickhouse/access/</access_control_path>
    
    <!-- Configuration des utilisateurs -->
    <users>
        <default>
            <password></password>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
        </default>
        
        <chroma>
            <password>chroma_password</password>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
            <databases>
                <database>chroma</database>
            </databases>
        </chroma>
    </users>
    
    <!-- Profils de configuration -->
    <profiles>
        <default>
            <max_memory_usage>10000000000</max_memory_usage>
            <use_uncompressed_cache>0</use_uncompressed_cache>
            <load_balancing>random</load_balancing>
            <max_execution_time>300</max_execution_time>
            <max_query_size>1048576</max_query_size>
            <max_insert_block_size>1048576</max_insert_block_size>
            <max_threads>8</max_threads>
            <max_concurrent_queries>100</max_concurrent_queries>
            <max_memory_usage_for_user>0</max_memory_usage_for_user>
            <max_memory_usage_for_all_queries>0</max_memory_usage_for_all_queries>
        </default>
        
        <readonly>
            <readonly>1</readonly>
        </readonly>
    </profiles>
    
    <!-- Quotas -->
    <quotas>
        <default>
            <interval>
                <duration>3600</duration>
                <queries>0</queries>
                <errors>0</errors>
                <result_rows>0</result_rows>
                <read_rows>0</read_rows>
                <execution_time>0</execution_time>
            </interval>
        </default>
    </quotas>
    
    <!-- Configuration des bases de données -->
    <databases>
        <chroma>
            <engine>Ordinary</engine>
        </chroma>
    </databases>
    
    <!-- Configuration de la compression -->
    <compression>
        <case>
            <method>lz4</method>
        </case>
    </compression>
    
    <!-- Configuration des métriques -->
    <prometheus>
        <endpoint>/metrics</endpoint>
        <port>9363</port>
        <metrics>true</metrics>
        <events>true</events>
        <asynchronous_metrics>true</asynchronous_metrics>
    </prometheus>
    
    <!-- Configuration de la mémoire -->
    <max_server_memory_usage>0</max_server_memory_usage>
    <max_server_memory_usage_to_ram_ratio>0.9</max_server_memory_usage_to_ram_ratio>
    
    <!-- Configuration des threads -->
    <max_thread_pool_size>10000</max_thread_pool_size>
    <max_concurrent_queries>100</max_concurrent_queries>
    
    <!-- Configuration du cache -->
    <mark_cache_size>5368709120</mark_cache_size>
    <uncompressed_cache_size>8589934592</uncompressed_cache_size>
    
    <!-- Configuration des parties -->
    <merge_tree>
        <max_suspicious_broken_parts>5</max_suspicious_broken_parts>
        <parts_to_delay_insert>150</parts_to_delay_insert>
        <parts_to_throw_insert>300</parts_to_throw_insert>
        <max_delay_to_insert>1</max_delay_to_insert>
        <max_parts_in_total>100000</max_parts_in_total>
        <replicated_deduplication_window>100</replicated_deduplication_window>
        <replicated_deduplication_window_seconds>604800</replicated_deduplication_window_seconds>
        <old_parts_lifetime>480</old_parts_lifetime>
        <max_bytes_to_merge_at_max_space_in_pool>161061273600</max_bytes_to_merge_at_max_space_in_pool>
        <max_bytes_to_merge_at_min_space_in_pool>1048576</max_bytes_to_merge_at_min_space_in_pool>
        <merge_max_block_size>8192</merge_max_block_size>
    </merge_tree>
    
    <!-- Configuration des dictionnaires -->
    <dictionaries_config>*_dictionary.xml</dictionaries_config>
    
    <!-- Configuration de la réplication -->
    <distributed_ddl>
        <path>/clickhouse/task_queue/ddl</path>
    </distributed_ddl>
    
    <!-- Configuration des formats -->
    <format_schema_path>/var/lib/clickhouse/format_schemas/</format_schema_path>
    
    <!-- Configuration de la sécurité -->
    <openSSL>
        <server>
            <certificateFile>/etc/clickhouse-server/server.crt</certificateFile>
            <privateKeyFile>/etc/clickhouse-server/server.key</privateKeyFile>
            <dhParamsFile>/etc/clickhouse-server/dhparam.pem</dhParamsFile>
            <verificationMode>none</verificationMode>
            <loadDefaultCAFile>true</loadDefaultCAFile>
            <cacheSessions>true</cacheSessions>
            <disableProtocols>sslv2,sslv3</disableProtocols>
            <preferServerCiphers>true</preferServerCiphers>
        </server>
        <client>
            <loadDefaultCAFile>true</loadDefaultCAFile>
            <cacheSessions>true</cacheSessions>
            <disableProtocols>sslv2,sslv3</disableProtocols>
            <preferServerCiphers>true</preferServerCiphers>
            <verificationMode>none</verificationMode>
            <invalidCertificateHandler>
                <name>RejectCertificateHandler</name>
            </invalidCertificateHandler>
        </client>
    </openSSL>
    
    <!-- Configuration des sessions -->
    <session_log>
        <database>system</database>
        <table>session_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </session_log>
    
    <!-- Configuration des requêtes -->
    <query_log>
        <database>system</database>
        <table>query_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </query_log>
    
    <!-- Configuration des threads de requête -->
    <query_thread_log>
        <database>system</database>
        <table>query_thread_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </query_thread_log>
    
    <!-- Configuration des parties -->
    <part_log>
        <database>system</database>
        <table>part_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </part_log>
    
    <!-- Configuration des traces -->
    <trace_log>
        <database>system</database>
        <table>trace_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </trace_log>
    
    <!-- Configuration des métriques -->
    <metric_log>
        <database>system</database>
        <table>metric_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
        <collect_interval_milliseconds>1000</collect_interval_milliseconds>
    </metric_log>
    
    <!-- Configuration des métriques asynchrones -->
    <asynchronous_metric_log>
        <database>system</database>
        <table>asynchronous_metric_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>7500</flush_interval_milliseconds>
    </asynchronous_metric_log>
    
    <!-- Configuration des insertions -->
    <crash_log>
        <database>system</database>
        <table>crash_log</table>
        <partition_by>toYYYYMM(event_date)</partition_by>
        <flush_interval_milliseconds>1000</flush_interval_milliseconds>
    </crash_log>
    
    <!-- Configuration de la rétention -->
    <background_pool_size>16</background_pool_size>
    <background_merges_mutations_concurrency_ratio>2</background_merges_mutations_concurrency_ratio>
    <background_schedule_pool_size>16</background_schedule_pool_size>
    <background_fetches_pool_size>8</background_fetches_pool_size>
    <background_move_pool_size>8</background_move_pool_size>
    <background_common_pool_size>8</background_common_pool_size>
    
    <!-- Configuration des timeouts -->
    <default_session_timeout>60</default_session_timeout>
    <max_session_timeout>3600</max_session_timeout>
    
    <!-- Configuration de la mémoire partagée -->
    <mlock_executable>true</mlock_executable>
    
    <!-- Configuration des remotes -->
    <remote_servers incl="clickhouse_remote_servers" />
    
    <!-- Configuration des macros -->
    <macros incl="macros" optional="true" />
    
    <!-- Configuration des clusters -->
    <builtin_dictionaries_reload_interval>3600</builtin_dictionaries_reload_interval>
    
    <!-- Configuration de la timezone -->
    <timezone>UTC</timezone>
    
    <!-- Configuration TCP -->
    <tcp_port_secure>9440</tcp_port_secure>
    
    <!-- Configuration MySQL -->
    <mysql_port>9004</mysql_port>
    
    <!-- Configuration PostgreSQL -->
    <postgresql_port>9005</postgresql_port>
    
    <!-- Configuration des includes -->
    <include_from>/etc/clickhouse-server/config.d</include_from>
    <users_config>/etc/clickhouse-server/users.xml</users_config>
</clickhouse>